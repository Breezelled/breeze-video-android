    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/popular_item_player"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popular_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxEms="9"
        android:maxLines="1"
        android:text="The Lord of the Rings: The Return of the King"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/popular_item_player"
        app:layout_constraintTop_toBottomOf="@+id/popular_item_player" />

    <TextView
        android:id="@+id/popular_item_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.5/10"
        android:textColor="@color/orange_pri"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/popular_item_title"
        app:layout_constraintEnd_toEndOf="@+id/popular_item_player"
        app:layout_constraintTop_toTopOf="@+id/popular_item_title" />
</androidx.constraintlayout.widget.ConstraintLayout>